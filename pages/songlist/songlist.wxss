/* pages/songlist/songlist.wxss */
.swi{width:100%;height:300rpx}
.swi image{width:100%;height:300rpx}

.musicContainer{display:flex;width:100%;height:150rpx;background:#333;margin-top:10rpx;}
.left{width:150rpx;height:150rpx;}
.left image{width:140rpx;height:140rpx;margin:5rpx;border-radius:10%;}
.center{width:450rpx;height:150rpx;}
.songName{color:#fff;font-size:42rpx;padding-left:24rpx;margin-top:20rpx;}
.singerName{color:#fff;font-size:30rpx;padding-left:24rpx;margin-top:20rpx;}
.right{width:150rpx;height:150rpx;}
.right image{width:120rpx;height: 120rpx;margin:15rpx}

.search_area{display:flex;width:100%;height:110rpx;margin-top:10rpx;background:#f00;}
.search_input{width:590rpx;height:110rpx;background:#fff;}
.search_input input{width:568rpx;height:108rpx;padding-left:20rpx;border:#f00 solid 1rpx;}
.search_button{width:158rpx;height:110rpx;background:#ff5384;font-size:40rpx;text-align:center;line-height:110rpx;color:#fff;}