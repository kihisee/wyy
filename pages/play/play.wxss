/* pages/play/play.wxss */
.content{position: absolute;top:0rpx;left:0rpx;width:100%;height:100%;background:#000;}
.content .big_img{width:100%;height:100%;opacity: 0.1;}
.title{position: absolute;top:80rpx;left:0rpx;width:100%;font-size:40rpx;margin:0;color:#fff;text-align: center;}
.middle{position: absolute;top:170rpx;left:0rpx;width:100%;height:700rpx;}
.midddle-swiper{width:100%;height:100%;}
.cd-rap{width:100%;}
.cd-image{width:600rpx;height: 600rpx;margin:50rpx auto;}
.cd-image image{width:400rpx;height:400rpx;border-radius:600rpx;border:#222 solid 100rpx;animation: zhuan 5s linear infinite;}
@keyframes zhuan{
  from{
    transform: rotate(0deg);
  }
  to{
    transform:rotate(360deg);
  }
}
.lyric{width:80%;height: 100%;margin:0 auto;}
.lyric text{display: block;text-align: center;color:#eee;line-height:30px;font-size:34rpx;}
.lyric text.ac{color:#f00}
::-webkit-scrollbar{width:0rpx;height:0rpx;}
.controls{width:100%;height:150rpx;background: #c20c0c;position: absolute;left:0rpx;bottom:0rpx;}
.controls image{width:100rpx;height:100rpx;margin:24rpx 0 0 46rpx;}

.progress{display:flex;width:100%;height:100rpx;line-height: 100rpx;position: absolute;left:0rpx;bottom:150rpx;}
.play_time,.end_time{width:15%;height:100rpx;color:#fff;text-align: center;}
.progress slider{width:70%;height:70rpx;margin:35rpx 0rpx 0;}